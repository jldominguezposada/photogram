<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Obsessions Received

    <a data-toggle="collapse" href="#user_obsessions_received_new_form">
      Add obsession
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.obsessions_received.each do |obsession| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/obsessions/<%= obsession.id %>">
          <%= obsession.stalker_id %>
        </a>

      </li>
    <% end %>

  </ul>
</div>
