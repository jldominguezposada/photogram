<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Stalker
        </th>

        <th>
          Victim
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @obsessions.each do |obsession| %>
      <tr>
        <!-- Display obsession.id start -->
        <td>
          <%= obsession.id %>
        </td>
        <!-- Display obsession.id end -->

        <!-- Display obsession.stalker_id start -->
        <td>
          <%= obsession.stalker.email %>
        </td>
        <!-- Display obsession.stalker_id end -->

        <!-- Display obsession.victim_id start -->
        <td>
          <%= obsession.victim.email %>
        </td>
        <!-- Display obsession.victim_id end -->

        <!-- Display obsession.created_at start -->
        <td>
          <%= time_ago_in_words(obsession.created_at) %> ago
        </td>
        <!-- Display obsession.created_at end -->

        <!-- Display obsession.updated_at start -->
        <td>
          <%= time_ago_in_words(obsession.updated_at) %> ago
        </td>
        <!-- Display obsession.updated_at end -->

        <td>
          <a href="/obsessions/<%= obsession.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
