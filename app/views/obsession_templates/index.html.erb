<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All obsessions
    </h1>

    <a href="/obsessions/new" class="btn btn-block btn-outline-secondary">
      Add a new obsession
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

