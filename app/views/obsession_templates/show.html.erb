<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Obsession #<%= @obsession.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/obsessions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link obsession start -->
      <div class="col">
        <a href="/obsessions/<%= @obsession.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit obsession
        </a>
      </div>
      <!-- Edit link obsession end -->

      <!-- Delete link obsession start -->
      <div class="col">
        <a href="/delete_obsession/<%= @obsession.id %>" class="btn btn-block btn-outline-secondary">
          Delete obsession
        </a>
      </div>
      <!-- Delete link obsession end -->
    </div>

    <dl>
      <dt>
        Stalker
      </dt>
      <!-- Display stalker_id start -->
      <dd>
        <%= @obsession.stalker_id %>
      </dd>
      <!-- Display stalker_id end -->

      <dt>
        Victim
      </dt>
      <!-- Display victim_id start -->
      <dd>
        <%= @obsession.victim_id %>
      </dd>
      <!-- Display victim_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@obsession.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@obsession.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

