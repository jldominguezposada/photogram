<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo
</h1>


<hr>

<!-- Form photo start -->
<form action="/create_photo" method="post">
<!-- Form photo end -->

  <!-- Label and input for users_id start -->
  <!-- Input for "users_id" start -->
  <input type="hidden" name="users_id" value="<%= current_user.id %>">
  <!-- Input for "users_id" end -->
  <!-- Label and input for users_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

