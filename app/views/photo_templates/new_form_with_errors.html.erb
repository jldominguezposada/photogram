<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new photo
</h1>


<hr>

<!-- Form photo start -->
<form action="/create_photo" method="post">
<!-- Form photo end -->

  <!-- Label and input for users_id start -->
  <div class="form-group">
    <label for="users_id">
      Users
    </label>

    <!-- Input for users_id start -->
    <input type="text" id="users_id" name="users_id" class="form-control" value="<%= @photo.users_id %>">
    <!-- Input for users_id end -->
  </div>
  <!-- Label and input for users_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
